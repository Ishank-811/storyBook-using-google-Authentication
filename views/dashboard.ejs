<h1>dash board</h1>
<h1>welcome <%= name %></h1>

<% if(stories.length!=0){ %>
<table class="striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th>Edit</th>
      <th>Delete</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% stories.forEach(stories => { %>
    <tr>
      <td><a href="/stories/<%= stories._id %> "><%= stories.title %> </a></td>
      <td><%= moment(stories.CreatedAt).format('Do MMMM, YYYY') %></td>
      
      <td><span class="dash-status"><%= stories.status %> </span></td>
      <td><a
        style="margin: 20px"
        href="/stories/<%= stories.id %>"
        class="btn halfway-fab blue"
        ><i class="fas fa-edit fa-small"></i
      ></a></td>
      <td><%- include("../views/partials/deletebtn2.ejs" , {url :`/stories/${stories.id}` }) %> </td>
      <td></td>
    </tr>

    <% }) %>
  </tbody>
</table>
<% } else{ %>
<h3><i>NO STORIES</i></h3>
<% } %>
