<div class="row">
    <div class="col s12 m8">
        <h3> <%= stories.title %> 
            <small>
             
                <% if( user==stories.user._id){ %>
                    <a
          
          href="/stories/<%= stories._id %>"
          class="btn halfway-fab blue"
          ><i class="fas fa-edit fa-small"></i
        ></a>
                    
                <% } %>  
            </small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title"><%= moment(stories.CreatedAt).format('Do MMMM, YYYY') %></span>
                <%= stories.body.replace(/<(?:.|\n)*?>/gm, '') %>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title"> <%= name %></span>
                <img src="<%= stories.user.Image %>" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}">More From <%= name %></a>
            </div>
        </div>
    </div>
</div>
